<div class="container row">
    <h1>Listing feeds</h1>
</div>
<div class="container row">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Url</th>
          <th>Description</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @feeds.each do |feed| %>
          <tr>
            <td><%= link_to feed.name, feed_path(feed) %></td>
            <td><%= feed.description %></td>
            <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
            <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Feed', new_feed_path, class: 'small button' %>
</div>
